<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemscope itemprop="blogPost">

  <div class="post">
    <header class="post-header">
      <% if (post.link || post.title){ %>
      <%- partial('header', {class_name: 'archive-article-title'}) %>
      <% } %>
    </header>
    <div itemprop="articleBody">
      <% if (post.excerpt && index){ %>
        <%- post.excerpt %>
        <% if (theme.excerpt_link){ %>
          <p class="article-more-link">
            <a rel="prefetch" href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %></a>
          </p>
        <% } %>
      <% } else { %>
        <% if (post.slides || post.iframe) { %>
          <% if (post.slides) { %>
            <% var iframe = (post.slides) %><%}else{%><% var iframe = (post.iframe) %>
          <%}%>
          <div style="margin-bottom: 20px;">
            <iframe src="<%= iframe %>" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true" width="100%" height="700" frameborder="0"></iframe>
            <em style="font-size: smaller;"><a href="<%= iframe %>" target="_blank">View this presentation fullscreen in a new tab.</a></em>
          </div>
          <%}else{%>
          <div class="mobile-img" style="height: 200px;overflow:hidden;background-image:url('/assets/img/<%- post.img %>');background-size: cover;background-position: center;"></div>
          <%}%>
        <!-- prior post content -->
        <%- post.content %>
        <!-- end post content -->
      <% } %>
    </div>


    <!-- <script src="https://utteranc.es/client.js"
    repo="reyemtm/getbounds"
    issue-term="pathname"
    theme="github-light"
    crossorigin="anonymous"
    async>
    </script> -->

    <!--footer>
      <%/* if (!index){ %>
        <%- partial('nav') %>
      <% } */%>
    </footer-->
  </div>
    <div class="container post">
      <%- list_related_posts({
        maxCount: 2, 
        orderBy: 'random', 
        pClass: 'post-realted-p',
        ulClass: 'post-related-ul',
        liClass: 'post-related-li',
        aClass: 'post-related-a',
        generateAbstract: true,
        abstractClass: 'post-related-abstract',
        abstractLength: 200
        }) %>
    </div>
</article>

<% if (!index && post.comments && config.disqus_shortname){ %>
<section id="comments">
    <% if (post.comments && config.disqus_shortname){ %>
      <a rel="prefetch" href="<%- post.permalink %>#disqus_thread" class="article-comment-link"><%= __('comment') %></a>
    <% } %>
  <div id="disqus_thread">
    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
</section>
<% } %>