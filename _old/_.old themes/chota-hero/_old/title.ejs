<% if (post.link){ %>
  <h2 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h2 itemprop="name" class="post-title">
      <a href="<%- post.permalink %>"><%= post.title %></a>
    </h2>
    <%- partial('date', {class_name: 'article-date', date_format: null}) %>
    <br>
    <!-- <%- partial('tag') %> -->
    <% if (post.slides) { %>
    <div>
      <iframe src="<%- post.slides %>" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true" width="100%" height="600" frameborder="0" style="border:solid thick #31353d;"></iframe>
    </div>
    <%}%>
    <p><%- post.excerpt %></p>
    <a href="<%-post.permalink %>" style="font-size:1.6rem;">Continue Reading...</a>
  <% } else { %>
    <h2 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h2>
  <% } %>
<% } %>