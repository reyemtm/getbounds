<% if (post.link){ %>
  <!--link-->
  <h2 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.path) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <!--index-->
    <a rel="prefetch" href="<%- url_for(post.path) %>" class="post-title">
        <h2 itemprop="name" class="post-title"><%- post.title %></h2>
        <h4><%- post.subtitle %></h4>
    </a>
    <%- partial('date', {class_name: 'article-date', date_format: null}) %>
    <br>
    <!--tag-->
    <%- partial('tag') %>
  <% } else { %>
    <div class="post-title">
        <h1 itemprop="name"><%- post.title %></h2>
        <h3><%- post.subtitle %></h4>
        <%- partial('date', {class_name: 'article-date', date_format: null}) %>
        <br>
        <!--tag-->
        <%- partial('tag') %>
    </div>
  <% } %>
<% } %>